{
  "name": "es-ui",
  "version": "0.0.2",
  "description": "An EnsembleStars Style UI Component Library built on Vue3",
  "license": "MIT",
  "main": "lib/index.cjs.js",
  "module": "es/index.es.js",
  "unpkg": "dist/index.umd.js",
  "types": "es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.es.js",
      "require": "./lib/index.cjs.js"
    },
    "./style.css": "./es/style.css"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "volar.d.ts"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "pnpm run clean && vue-tsc --noEmit && pnpm run build:esm && pnpm run build:cjs && pnpm run build:umd",
    "build:esm": "vite build --config vite.config.esm.ts",
    "build:cjs": "vite build --config vite.config.cjs.ts",
    "build:umd": "vite build --config vite.config.umd.ts",
    "preview": "vite preview",
    "clean": "rimraf dist es lib",
    "test": "vitest",
    "test:once": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "vitepress dev src/docs",
    "docs:build": "vitepress build src/docs",
    "docs:serve": "vitepress serve src/docs"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@testing-library/vue": "^6.6.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "deepmerge": "^4.2.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.1.1",
    "happy-dom": "^5.3.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-delete": "^2.0.0",
    "sass": "^1.53.0",
    "tailwindcss": "^3.1.4",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vite-plugin-dts": "^1.2.0",
    "vitepress": "1.0.0-alpha.4",
    "vitest": "^0.16.0",
    "vue-tsc": "^0.38.1"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  }
}
